<script type="text/javascript">
  var viewModel = {
    firstName : ko.observable("Planet"),
    lastName : ko.observable("Earth")
  };
  viewModel.fullName = ko.dependentObservable(function() {
    return this.firstName() + " " + this.lastName();
  }, viewModel);

  ko.applyBindings(viewModel);
</script>


